<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.LoginPage"
             Title="Connexion">
    <Grid Padding="20">
        <VerticalStackLayout VerticalOptions="Center" Spacing="20">
            <Image Source="logo.png" 
                   HeightRequest="140" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20" />
            
            <Label Text="Bienvenue" 
                   FontSize="28" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold" />
            
            <Label Text="Connectez-vous Ã  votre compte" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="Gray"
                   Margin="0,0,0,20" />
            
            <Border StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10"
                    Padding="10,0">
                <Entry x:Name="UsernameEntry" 
                       Placeholder="Nom d'utilisateur ou Email" />
            </Border>
            
            <Border StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10"
                    Padding="10,0">
                <Entry x:Name="PasswordEntry" 
                       Placeholder="Mot de passe" 
                       IsPassword="True" />
            </Border>
            
            <Button Text="Se connecter" 
                    Clicked="OnLoginClicked"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="0,10,0,0" />
            
            <Label x:Name="ErrorLabel" 
                   TextColor="Red" 
                   IsVisible="False" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,0" />
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Vous n'avez pas de compte ?" />
                <Label Text="S'inscrire" 
                       TextColor="#3498db"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>